{
  "name": "bmad-studio",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && nodemon --watch main --exec cross-env NODE_ENV=development electron dist/main/main/index.js\"",
    "dev:watch": "concurrently \"vite\" \"tsc --project tsconfig.main.json --watch\" \"wait-on http://localhost:5173 && wait-on dist/main/main/index.js && nodemon --watch dist/main --exec cross-env NODE_ENV=development electron dist/main/main/index.js\"",
    "build": "npm run build:main && npm run build:renderer && electron-builder",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "rebuild:electron": "electron-rebuild --force",
    "rebuild:test": "npm rebuild better-sqlite3",
    "predev": "npm run rebuild:electron && npm run build:main",
    "typecheck": "tsc --noEmit --project tsconfig.main.json && tsc --noEmit --project tsconfig.renderer.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "preview": "vite preview",
    "start": "electron dist/main/main/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giovanniarandaa/bmad-studio.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/giovanniarandaa/bmad-studio/issues"
  },
  "homepage": "https://github.com/giovanniarandaa/bmad-studio#readme",
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/lodash": "^4.17.21",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.11",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^4.0.15",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "chokidar": "^3.6.0",
    "keytar": "^7.9.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.561.0",
    "minimatch": "^10.1.1",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^6.30.2",
    "tailwindcss": "^4.1.18",
    "zustand": "^4.5.7"
  }
}
